[ctns_make id='gen_abs_prop_x_y_swap']

  [ctns_front style='font-size:150%;']
$$ |x-y\ | = |y-x\ | $$
  [/ctns_front]  

  [ctns_back style='font-size:150%;']
$$\color{blue}{ |x-y\ | = |y-x\ |} $$
  [/ctns_back]  

  [ctns_frontspeak]
The absolute value of x minus y -- equals the absolute value of y minus x.
  [/ctns_frontspeak]  

  [ctns_backspeak]
The absolute value of x minus y -- equals the absolute value of y minus x.
  [/ctns_backspeak]  

[/ctns_make]
